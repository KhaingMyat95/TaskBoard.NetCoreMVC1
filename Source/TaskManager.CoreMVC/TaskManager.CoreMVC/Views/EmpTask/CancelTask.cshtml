@model EmpTaskModel

@{
    Layout = null;
}

<form id="CancelTaskForm" method="post" asp-action="CancelTask">
    <input type="hidden" asp-for="TaskId" />
    <input type="hidden" asp-for="EmployeeId" />

    @*Task*@
    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control disable-control" readonly>
    </div>
    @*Task*@
    <div style="height:20px;"></div>
    @*Remark*@
    <div class="form-group">
        <label asp-for="Remark"></label>
        <input asp-for="Remark" class="form-control disable-control" rows="3" style="height: 67px;" readonly>
    </div>
    @*Remark*@
    <div style="height:20px;"></div>
    @*Priority*@
    <div class="form-group">
        <div class="form-check form-switch">
            <input asp-for="IsPrority" class="form-check-input" type="checkbox" disabled="disabled">
            <label class="form-check-label" asp-for="IsPrority"></label>
        </div>
    </div>
    @*Priority*@
    <div style="height:20px;"></div>
    @*Cancel Reason*@
    <div class="form-group">
        <label asp-for="CancelReason"></label>
        <input asp-for="CancelReason" class="form-control" rows="3" style="height: 67px;" required="true">
    </div>
    @*Cancel Reason**@

    <div style="height:20px;"></div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-warning">Confirm</button>
        <span style="width:20px;"></span>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
<partial name="_ValidationScriptsPartial"></partial>
