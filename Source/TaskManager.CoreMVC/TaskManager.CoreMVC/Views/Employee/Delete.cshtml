@model EmployeeModel

@{
    Layout = null;
}

<form id="DeleteForm" method="post" asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    @*Employee Code Input*@
    <div class="form-group">
        <label asp-for="EmployeeCode"></label>
        <input asp-for="EmployeeCode" readonly="" class="form-control disable-control">
    </div>
    @*Employee Code*@
    <div style="height:20px;"></div>
    @*Name*@
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" readonly="" class="form-control disable-control">
    </div>
    @*Name Input*@
    <div style="height:20px;"></div>
    @*Admin*@
    <div class="form-group">
        <div class="form-check form-switch">
            <input asp-for="IsAdmin" class="form-check-input" type="checkbox" disabled="disabled">
            <label class="form-check-label" asp-for="IsAdmin"></label>
        </div>
    </div>
    @*Admin*@

    <div style="height:20px;"></div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-warning" onclick="Submit()">Confirm</button>
        <span style="width:20px;"></span>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
<partial name="_ValidationScriptsPartial"></partial>
